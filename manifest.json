{
  "name": "LinkMagpie",
  "description": "Finds stuff quick.",
  "version": "0.1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["search.js", "fuse.js"]
    }
  ],
  "browser_action": {
    "default_popup": "search_popup.html",
    "default_icon": "icon.png"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
                
  "permissions": [
      "tabs", "activeTab", "<all_urls>"
  ],
  "commands": {
    "_execute_browser_action": {
      "description" : "Press Ctrl+Period to open search",
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "MacCtrl+Period"
      }
    }
  }
}
